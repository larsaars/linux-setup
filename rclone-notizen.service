[Unit]
Description=Rclone mount for OneDrive Notizen
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount onedrive:Notizen /home/me/Notizen --vfs-cache-mode writes --allow-other --config /home/me/.config/rclone/rclone.conf
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

